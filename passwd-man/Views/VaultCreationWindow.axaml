<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="400"
        x:Class="passwd_man.Views.VaultCreationWindow"
        Width="400"
        Height="600"
        MinWidth="400"
        MinHeight="600"
        MaxWidth="400"
        MaxHeight="600"
        Background="Black"
        Title="Create a vault">

        <StackPanel>
            <TextBox x:Name="VaultName" Watermark="Name"/>
            <TextBox x:Name="FolderPathTextBox" Watermark="Path"/>
            <Button Click="PressedHandler">Choose</Button>
            <TextBox x:Name="Password" Watermark="Password" PasswordChar="*"/>
            <TextBox x:Name="PasswordCheck" Watermark="Repeat Password" PasswordChar="*"/>
            <TextBlock x:Name="IsOk"/>
            <Button Click="CreateVault">Create!</Button>
        </StackPanel>
</Window>
